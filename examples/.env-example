# Google Cloud Configuration
VERTEX_PROJECT_ID=your-gcp-project-id
VERTEX_API_KEY=your-api-key
VERTEX_LOCATION=global
VERTEX_DATA_STORE_ID=drama-shorts-datastore
VERTEX_ENGINE_ID=drama-shorts-engine
VERTEX_SERVING_CONFIG_ID=default_config

# Schema Configuration
SCHEMA_ID_FIELD=id
SCHEMA_TITLE_FIELD=title
SCHEMA_CONTENT_FIELD=description
SCHEMA_SEARCHABLE_FIELDS=title,description,tags,cast,themes
SCHEMA_FILTERABLE_FIELDS=genre,content_type,language,rating.mpaa_rating,duration_seconds
SCHEMA_FACETABLE_FIELDS=genre,content_type,language,creator_info.creator_type

# Application Configuration
DATA_DIRECTORY=data
OUTPUT_DIRECTORY=output
BATCH_SIZE=100
MAX_WORKERS=4

# Authentication Methods (choose one):
# Option 1: API Key (recommended for development)
VERTEX_API_KEY=your-google-cloud-api-key

# Option 2: Service Account Key File (alternative)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Option 3: Application Default Credentials (gcloud auth application-default login)
# No additional configuration needed - just run: gcloud auth application-default login