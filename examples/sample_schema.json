{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Drama Shorts Metadata Schema",
	"description": "TV Show schema for micro_drama",
	"type": "object",
	"required": ["id", "title", "desc", "genre", "asset_type", "image", "status", "licensing_from", "licensing_until"],
	"properties": {
		"id": {
			"type": "string",
			"description": "unique id for the content"
		},
		"title": {
			"type": "string"
		},
		"original_title": {
			"type": "string"
		},
		"desc": {
			"type": "string"
		},
		"short_desc": {
			"type": "string"
		},
		"genre": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string"
			}
		},
		"asset_type": {
			"type": "integer",
			"description": "content type, 6=shows, 2=seasons & 1=episode/trailer"
		},
		"actors": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"directors": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"extended": {
			"type": "object",
			"description": "all other info like music, producers, writers, content descriptors, etc."
		},
		"tags": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"primary_language": {
			"type": "string"
		},
		"content_language": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"subtitle_lang": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"audio_lang": {
			"type": "string"
		},
		"rating": {
			"type": ["number", "null"]
		},
		"age_rating": {
			"type": "string"
		},
		"country_meta": {
			"type": "object"
		},
		"c_releasedate": {
			"type": "string",
			"format": "date-time"
		},
		"category": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"episode_count": {
			"type": "integer"
		},
		"image": {
			"type": "string"
		},
		"keywords": {
			"type": "string"
		},
		"licensing_from": {
			"type": "string",
			"format": "date-time"
		},
		"licensing_until": {
			"type": "string",
			"format": "date-time"
		},
		"season_count": {
			"type": "integer"
		},
		"status": {
			"type": "integer"
		},
		"rights": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"zee_id": {
			"type": "string"
		},
		"release_date": {
			"type": "string",
			"format": "date-time"
		}
	}
}
